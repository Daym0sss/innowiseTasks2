<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
<table class="table table-dark table-bordered">
    <tr>
        <th scope="col">Name</th>
        <th scope="col">E-mail</th>
        <th scope="col">Gender</th>
        <th scope="col">Status</th>
        <th scope="col">Actions</th>
    </tr>
    {% for user in data %}
        <tr>
            <td>{{ user.name }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.gender }}</td>
            <td>{{ user.status }}</td>
            <td>
                <input type="hidden" name="id" value={{ user.id }}>
                <button class='btn btn-primary' name="edit" onclick="editClick(event)">Edit</button>
                <button class='btn btn-primary' name="delete" onclick="deleteClick(event)">Delete</button>
            </td>
        </tr>
    {% endfor %}
</table>
<button class="btn btn-primary" name="add" onclick="addClick()">Add</button>
</body>
<script>
    function addClick()
    {
        window.location.href="http://drupal.docker.localhost/mainPage/add";
    }
    function editClick(event)
    {
        let button=event.currentTarget;
        let idElement=button.previousElementSibling;
        window.location.href="http://drupal.docker.localhost/mainPage/edit/" + idElement.defaultValue;
    }
    function deleteClick(event)
    {
        let button=event.currentTarget;
        let idElement=button.previousElementSibling.previousElementSibling;
        window.location.href="http://drupal.docker.localhost/mainPage/delete/" + idElement.defaultValue;
    }
</script>
</html>