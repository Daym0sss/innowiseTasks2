{{ attach_library(trainee_users/bootstrap) }}
<table class="table table-dark table-bordered">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">E-mail</th>
        <th scope="col">Gender</th>
        <th scope="col">Status</th>
        <th scope="col">Actions</th>
      </tr>
      {% for user in data %}
          <tr>
            <td>{{ user.name }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.gender }}</td>
            <td>{{ user.status }}</td>
            <td>
                  <input type="hidden" name="id" value={{ user.id }}>
                  <button class='btn btn-primary' name="edit"><a href="{{ url(links.edit), {'id': {{ user.id }}} }}">Edit</a></button>
                  <button class='btn btn-primary' name="delete"><a href="{{ url(links.delete), {'id': {{ user.id }}} }}">Delete</a></button>
            </td>
          </tr>
      {% endfor %}
</table>
<button class="btn btn-primary" name="add"><a href="{{ url(links.add) }}">Add</a></button>
